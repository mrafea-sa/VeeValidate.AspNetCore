@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="center-align">
    <img width="250" alt="VeeValidate Logo" src="~/images/vee-validate.svg"/>
    
    <h1>Validation Examples</h1>
    <div class="row">
        <div class="col s6">
            <div class="card white">
                <div class="card-content">
                    <a asp-page="/DataAnnotations">
                        <img height="150" alt="Dot Net Core Logo" src="~/images/net-core.png" />
                    </a>
                </div>
                <div class="card-action">
                    <a asp-page="/DataAnnotations">.NET Data Annotations</a>
                </div>
            </div>
        </div>
        <div class="col s6">
            <div class="card white">
                <div class="card-content">
                    <a asp-page="/FluentValidation">
                        <img height="150" alt="Fluent Validation Logo" src="~/images/fluent-validation.png" />
                    </a>
                </div>
                <div class="card-action">
                    <a asp-page="/FluentValidation">Fluent Validation</a>
                </div>
            </div>
        </div>
    </div>
</div>
