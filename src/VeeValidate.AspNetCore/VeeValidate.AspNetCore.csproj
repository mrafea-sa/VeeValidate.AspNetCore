<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>Thomas Greensill</Authors>
    <Company />
    <Description>A simple library for changing the html validation attributes generated by ASP.NET to VeeValidate rules.</Description>
    <RepositoryUrl>https://github.com/tgreensill/VeeValidate.AspNetCore</RepositoryUrl>
    <PackageTags>AspNetCore, Vue, VeeValidate</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc.DataAnnotations" Version="2.1.0" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.ViewFeatures" Version="2.1.0" />
  </ItemGroup>

</Project>
